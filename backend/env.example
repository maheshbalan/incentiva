# JWT Secret
JWT_SECRET="your-super-secret-jwt-key-here"

# Server Configuration
PORT=3001
NODE_ENV=development

# AI Service (Claude 3.5 Sonnet)
ANTHROPIC_API_KEY="your-anthropic-api-key-here"

# OAuth Configuration
GOOGLE_CLIENT_ID="your-google-client-id"
